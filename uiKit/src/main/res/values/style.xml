<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_light_gray" parent="Widget.Material3.Button.TextButton">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/light_gray</item>
        <item name="cornerRadius">100dp</item>
        <item name="backgroundTint">@color/glass</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="button_green" parent="Widget.Material3.Button.TextButton">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="textAllCaps">false</item>
        <item name="rippleColor">@color/green</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">100dp</item>
        <item name="backgroundTint">@color/green</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="edit_text" parent="Widget.AppCompat.EditText">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="backgroundTint">@color/light_gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingStart">@dimen/space_16</item>
        <item name="android:textColorHint">@color/white_50</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item>
    </style>
</resources>