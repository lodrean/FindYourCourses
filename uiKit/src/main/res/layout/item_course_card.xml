<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_search_view"
    android:layout_width="match_parent"
    android:layout_height="236dp"
    android:backgroundTint="@color/dark_gray"
    android:clickable="true"
    android:elevation="0dp"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:theme="@style/Theme.Stepic"
    card_view:cardCornerRadius="@dimen/card_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="114dp"
            android:background="@drawable/image_radius"
            android:scaleType="centerCrop"
            tools:src="@drawable/cover" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_16"
            android:layout_marginTop="@dimen/space_16"
            android:textColor="@color/white"
            tools:text="Java-разработчик с нуля" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_12"
            android:ellipsize="marquee"
            android:lines="2"
            android:paddingHorizontal="@dimen/space_16"
            android:singleLine="false"
            android:textColor="@color/white_70"
            tools:text="@string/example_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/space_16">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="@dimen/font_16"
                tools:text="999₽" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:text="@string/more"
                android:textColor="@color/green"
                android:textSize="@dimen/font_12" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:src="@drawable/arrow_right_short_fill"
                android:translationY="2dp" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>